<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFindPi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Pi"
        android:onClick="onClick"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/btnFindPi"
        app:layout_constraintEnd_toEndOf="@id/btnFindPi"/>


    <Button
        android:id="@+id/btnSortRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort 1000 random Integers"
        android:onClick="onClick"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvPi"
        app:layout_constraintEnd_toEndOf="@id/tvPi"/>

    <TextView
        android:id="@+id/tvRandomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:scrollbars="vertical"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/btnSortRandom"
        app:layout_constraintEnd_toEndOf="@id/btnSortRandom"/>

</androidx.constraintlayout.widget.ConstraintLayout>